{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext", "ES2021.String"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "$/*": ["./public/*"],
      "*": ["node_modules/*"]
    },
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "*.ts",
    "*.tsx",
    "blockchain/chains.ts",
    "blockchain/utils.ts",
    "blockchain/utils.ts",
    "./contracts"
  ],
  "exclude": ["node_modules", "dist", ".next"],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
